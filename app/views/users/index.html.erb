<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= will_paginate %>
<ul class="users">
  <% @users.each do |user| %>
      <li>
        <%= gravatar_for user, size: 50 %>
        <%= link_to user.name, user %>
        <%= link_to "Hacer PRO", userpro_path(id: user.id), method: :post %>

      </li>
      <% if ispro?(user) %>
          PRO
          <%else%>
      FREE
      <% end %>

  <% end %>

</ul>

<%= will_paginate %>