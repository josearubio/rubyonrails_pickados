<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.picks.any? %>
        <h3>Picks(<%= @user.picks.count %>)</h3>
        <ol class="picks">
          <%= render @picks %>
        </ol>
        <%= will_paginate @picks %>
    <% end %>
  </div>
</div>