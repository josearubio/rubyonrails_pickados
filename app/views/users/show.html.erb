<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>

    <section class="userstats">
      <div class="panel panel-default">

          <div class="panel-heading">
            <h3 class="panel-title">Estad√≠sticas <%= @user.stats.last.created_at.strftime("%B del %Y")%></h3>
          </div>
        <div class="panel-body">
          <% if @user.stats.any? %>
              <%= render 'shared/userstats' %>
          <% end %>
        </div></div>

    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.picks.any? %>
        <h3>Picks(<%= @user.picks.count %>)</h3>
        <ol class="picks">
          <%= render @picks %>
        </ol>
        <%= will_paginate @picks %>
    <% end %>
  </div>
</div>