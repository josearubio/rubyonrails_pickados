<% if logged_in? %>
    <div class="row">
      <aside class="col-md-4">
        <section class="user_info">
          <%= render 'shared/user_info' %>
        </section>
        <section class="stats">
          <%= render 'shared/stats' %>
        </section>
        <section class="newpick_form">
          <%= link_to "Publicar pick", new_pick_path, class: "btn btn-lg btn-primary" %>
        </section>
      </aside>
      <div class="col-md-8">
        <h3>Todos los picks</h3>
        <ol class="picks">
          <%= render @picks %>
        </ol>
        <%= will_paginate @picks %>

      </div>
    </div>
<% end %>
