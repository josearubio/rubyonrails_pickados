
<% if logged_in? %>
    <div class="container fondogris">
    <div class="row margintop">
      <aside class="col-md-3">
        <div class="panel panel-default">
          <div class="panel-body">
        <section class="user_info">
          <%= render 'shared/user_info' %>
        </section>
        <section class="stats">
          <%= render 'shared/stats' %>
        </section></div></div>
        <section class="newpick_form">
          <%= link_to " Publicar pick", new_pick_path, class: "btn btn-lg btn-filtro" %>
        </section>
        <section class="userstats">
          <% if current_user.stats.any? %>
          <div class="panel panel-default">

            <div class="panel-heading">
              <h3 class="panel-title"><span class="glyphicon glyphicon-stats"></span> Estadísticas
                <span class="glyphicon glyphicon-calendar"></span> <%= l(current_user.stats.last.created_at, format: :mesano)%></h3>
            </div>
            <div class="panel-body">

                  <%= render 'shared/userstats' %>

            </div></div>
              <% end %>
        </section>
      </aside>
      <div class="col-md-1"></div>
      <div class="col-md-8">
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="dropdown">
              <button class="btn btn-filtro dropdown-toggle" type="button" data-toggle="dropdown">Filtrar por deporte
                <span class="caret"></span></button>
            <ul class="dropdown-menu">
              <li><%= link_to "Todos", root_path%>
              </li>
              <li><%= link_to "Fútbol #{image_tag("futbol.png", size:"20")}".html_safe, mispicksbysport_path(sport: 'futbol',id: current_user)%>
              </li>
              <li><%= link_to "Fórmula 1 #{image_tag("f1a.png", height:"20", width: "35")}".html_safe, mispicksbysport_path(sport: 'F1',id: current_user)%>
              </li>
              <li><%= link_to "Tenis #{image_tag("tenis.png", size:"20")}".html_safe, mispicksbysport_path(sport: 'tenis',id: current_user)%>
              </li>
              <li><%= link_to "Baloncesto #{image_tag("baloncesto.png", size:"20")}".html_safe, mispicksbysport_path(sport: 'baloncesto',id: current_user)%>
              </li>
              <li><%= link_to "Balonmano #{image_tag("balonmano.png", size:"20")}".html_safe, mispicksbysport_path(sport: 'balonmano',id: current_user)%>
              </li>
              <li><%= link_to "Ciclismo #{image_tag("ciclismo.png", size:"20")}".html_safe, mispicksbysport_path(sport: 'ciclismo',id: current_user)%>
              </li>
              <li><%= link_to "Atletismo #{image_tag("atletismo.png", size:"20")}".html_safe, mispicksbysport_path(sport: 'atletismo',id: current_user)%>
              </li>
              <li><%= link_to "Voleibol #{image_tag("voleibol.png", size:"20")}".html_safe, mispicksbysport_path(sport: 'voleibo1',id: current_user)%>
              </li>
              <li><%= link_to "Galgos #{image_tag("galgos.png", size:"20")}".html_safe, mispicksbysport_path(sport: 'galgos',id: current_user)%>
              </li>
              <li><%= link_to "Motociclismo #{image_tag("motociclismo.png", size:"20")}".html_safe, mispicksbysport_path(sport: 'motociclismo',id: current_user)%>
              </li>
            </ul></div><br>
        <ol class="picks">
          <%= render @picks %>
        </ol>
            </div><%= will_paginate @picks %></div>


      </div>
    </div></div>
<% end %>
