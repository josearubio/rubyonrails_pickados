<% if logged_in? %>
    <div class="row">
      <aside class="col-md-3">
        <section class="user_info">
          <%= render 'shared/user_info' %>
        </section>
        <section class="stats">
          <%= render 'shared/stats' %>
        </section>
        <section class="newpick_form">
          <%= link_to "Publicar pick", new_pick_path, class: "btn btn-lg btn-primary" %>
        </section>
        <section class="userstats">
          <div class="panel panel-default">

            <div class="panel-heading">
              <h3 class="panel-title">Mis Estad√≠sticas Mensuales</h3>
            </div>
            <div class="panel-body">
              <% if current_user.stats.any? %>
                  <%= render 'shared/userstats' %>
              <% end %>
            </div></div>

        </section>
      </aside>
      <div class="col-md-9">
        <h3>Mis picks</h3>
        <div class="panel panel-default">
          <div class="panel-body">
        <ol class="picks">
          <%= render @picks %>
        </ol>
            </div></div>
        <%= will_paginate @picks %>

      </div>
    </div>
<% end %>
