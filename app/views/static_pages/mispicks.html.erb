<div class="container">
<% if logged_in? %>

    <div class="row margintop">
      <aside class="col-md-3">
        <div class="panel panel-default">
          <div class="panel-body">
        <section class="user_info">
          <%= render 'shared/user_info' %>
        </section>
        <section class="stats">
          <%= render 'shared/stats' %>
        </section></div></div>
        <section class="newpick_form">
          <%= link_to " Publicar pick", new_pick_path, class: "btn btn-lg btn-primary" %>
        </section>
        <section class="userstats">
          <% if current_user.stats.any? %>
          <div class="panel panel-default">

            <div class="panel-heading">
              <h3 class="panel-title"><span class="glyphicon glyphicon-stats"></span> Estad√≠sticas
                <span class="glyphicon glyphicon-calendar"></span> <%= l(current_user.stats.last.created_at, format: :mesano)%></h3>
            </div>
            <div class="panel-body">

                  <%= render 'shared/userstats' %>

            </div></div>
              <% end %>
        </section>
      </aside>
      <div class="col-md-9">
        <div class="panel panel-default">
          <div class="panel-body">
        <ol class="picks">
          <%= render @picks %>
        </ol>
            </div></div>
        <%= will_paginate @picks %>

      </div>
    </div>
<% end %>
</div>